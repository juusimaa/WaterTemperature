<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WaterTemperature.ViewModels"
             x:Class="WaterTemperature.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Label 
                Text="Water Temperature Measurements"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry 
                Placeholder="Enter temperature"
                Text="{Binding Temperature}"
                Keyboard="Numeric"
                HorizontalOptions="Center" />

            <DatePicker 
                Date="{Binding MeasurementDate}"
                HorizontalOptions="Center" />

            <Button 
                x:Name="SaveButton"
                Text="Save Measurement"
                SemanticProperties.Hint="Saves the water temperature measurement"
                Command="{Binding SaveCommand}"
                HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Measurements}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Temperature, StringFormat='{0}°C'}" />
                            <Label Grid.Column="1" Text="{Binding MeasurementDate, StringFormat='{0:d}'}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
