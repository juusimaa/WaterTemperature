<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WaterTemperature.ViewModels"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="WaterTemperature.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0">
            <Label 
                Text="Water Temperature Measurements"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Border Stroke="Transparent" StrokeThickness="0" HeightRequest="200">
                <microcharts:ChartView 
                    Chart="{Binding Chart}"
                    HeightRequest="200" />
            </Border>

            <Entry 
                Placeholder="Enter temperature"
                Text="{Binding Temperature}"
                Keyboard="Numeric"
                HorizontalOptions="Center" />

            <DatePicker 
                Date="{Binding MeasurementDate}"
                HorizontalOptions="Center" />

            <Button 
                x:Name="SaveButton"
                Text="Save Measurement"
                SemanticProperties.Hint="Saves the water temperature measurement"
                Command="{Binding SaveCommand}"
                HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Measurements}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Temperature, StringFormat='{0}°C'}" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="{Binding MeasurementDate, StringFormat='{0:d}'}" VerticalOptions="Center" />
                            <Button Grid.Column="2" 
                                    Text="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DeleteCommand}"
                                    CommandParameter="{Binding .}"
                                    SemanticProperties.Hint="Deletes this temperature measurement"
                                    HeightRequest="40"
                                    Padding="10,0" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
