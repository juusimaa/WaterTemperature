<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WaterTemperature.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WaterTemperature"
    Title="WaterTemperature">

    <TabBar>
        <Tab Title="Graph">
            <ShellContent
                Title="Graph"
                ContentTemplate="{DataTemplate local:GraphPage}"
                Route="GraphPage" />
        </Tab>
        <Tab Title="Measurements">
            <ShellContent
                Title="Measurements"
                ContentTemplate="{DataTemplate local:MeasurementsPage}"
                Route="MeasurementsPage" />
        </Tab>
    </TabBar>

</Shell>
