<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WaterTemperature.ViewModels"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             x:Class="WaterTemperature.MeasurementsPage">
    <!-- BindingContext is set in code-behind -->
    <VerticalStackLayout Spacing="25" Padding="30,0">
        <Label Text="Edit Measurements" FontSize="20" HorizontalOptions="Center" Margin="0,20,0,10" />
        
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <!-- Add new measurement button for when grid is empty -->
            <Button x:Name="addButton" 
                    Text="Add New Measurement" 
                    Command="{Binding AddNewMeasurementCommand}"
                    WidthRequest="180" />
                    
            <!-- Delete selected measurement button -->
            <Button x:Name="deleteButton"
                    Text="Delete Selected"
                    Clicked="OnDeleteSelectedClicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    WidthRequest="120" />
        </HorizontalStackLayout>
        
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <syncfusion:SfDataGrid 
                x:Name="dataGrid"
                ItemsSource="{Binding Measurements}"
                AllowEditing="True"
                EditTapAction="OnDoubleTap"
                SelectionMode="Single"
                NavigationMode="Cell"
                AutoGenerateColumnsMode="None"
                AllowKeyboardNavigation="True"
                CellValueChanged="OnDataGridCellValueChanged"
                ColumnWidthMode="Auto"
                Margin="0,10,0,0">
                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:DataGridNumericColumn 
                        HeaderText="Temperature (Â°C)" 
                        MappingName="Temperature" />
                    <syncfusion:DataGridDateColumn HeaderText="Date" MappingName="MeasurementDate" />
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </HorizontalStackLayout>
        <Label Text="Double-click a cell to edit. Press Enter to confirm. Select a row and click 'Delete Selected' to remove." FontSize="14" TextColor="Gray" HorizontalOptions="Center" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>
